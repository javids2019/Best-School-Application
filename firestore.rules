rules_version = '2';
service cloud.firestore {
match /databases/{database}/documents {

match /assessmenttype/{itemId}{
allow read, write;
}
match /questiontypes/{itemId}{
allow read, write;
}
match /program/{itemId}{
allow read, write;
}    
match /module/{itemId}{
allow read, write;
}
match /level/{itemId}{
allow read, write;
}
match /{path=**}/question/{id} {
allow read, write;
}    
match /users/{id} {
allow read, write;
}
match /scoredetails/{id} {
allow read, write;
}
match /contactus/{id} {
allow read, write;
}
match /loginhistory/{id} {
allow read, write;
}
match /quizreport/{id} {
allow read, write;
}

}
}


//firebase deploy --only firestore:rules